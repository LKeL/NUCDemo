<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.heartblood.nucdemo.NewsDetailActivity"
    android:clipToPadding="true"
    android:background="@color/sfColor">
    <com.github.ksoichiro.android.observablescrollview.ObservableWebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/news_card_detail">
    </com.github.ksoichiro.android.observablescrollview.ObservableWebView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/news_card_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sfColor"
        app:title="文章"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
</FrameLayout>
